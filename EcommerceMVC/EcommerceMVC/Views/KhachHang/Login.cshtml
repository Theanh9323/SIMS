@model EcommerceMVC.ViewModel.LoginVM
@{
    ViewData["Title"] = "Login";
}
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Register</h1>
        <form asp-action="Login" enctype="multipart/form-data" asp-route-returnurl="@ViewBag.ReturnUrl">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row">
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for=UserName class="form-label my-3"></label><sup>*</sup>
                        <input asp-for=UserName type="text" class="form-control">
                        <span asp-validation-for=UserName class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for=Password class="form-label my-3"></label><sup>*</sup>
                        <input asp-for=Password type="text" class="form-control">
                        <span asp-validation-for=Password class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Sign In</button>
                <a asp-controller="KhachHang" asp-action="ForgotPassword">ForgotPassword?</a>
            </div>
        </form>
    </div>
</div>

