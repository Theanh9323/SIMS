@model EcommerceMVC.ViewModel.RegisterVM
@{
    ViewData["Title"] = "DangKy";
}
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Register</h1>
            <form asp-action="DangKy" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MaKh" type="text" class="form-control">
                        <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MatKhau" type="text" class="form-control">
                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-item">
                <label asp-for="@Model.HoTen" class="form-label my-3"></label><sup>*</sup>
                <input asp-for=HoTen type="text" class="form-control">
                <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
            </div>
            <div class="form-check my-3">
                <input asp-for="@Model.GioiTinh" class="form-check-input">
                <label class="form-check-label" for="GioiTinh">Nam?</label>
            </div>
            <div class="form-item">
                <label asp-for=NgaySinh class="form-label my-3"></label><sup>*</sup>
                <input asp-for=NgaySinh type="date" class="form-control">
                <span asp-validation-for=NgaySinh class="text-danger"></span>
            </div>
            <div class="form-item">
                <label asp-for=DiaChi class="form-label my-3"></label><sup>*</sup>
                <input asp-for=DiaChi type="text" class="form-control">
                <span asp-validation-for=DiaChi class="text-danger"></span>
            </div>
            <div class="form-item">
                <label asp-for=DienThoai class="form-label my-3"></label><sup>*</sup>
                <input asp-for=DienThoai type="text" class="form-control">
                <span asp-validation-for=DienThoai class="text-danger"></span>
            </div>
            <div class="form-item">
                <label asp-for=Email class="form-label my-3"></label><sup>*</sup>
                <input asp-for=Email type="text" class="form-control">
                <span asp-validation-for=Email class="text-danger"></span>
            </div>
            <div class="form-item">
                <label asp-for=Hinh class="form-label my-3"></label><sup>*</sup>
                <input asp-for=Hinh type="file" class="form-control">
                <span asp-validation-for=Hinh class="text-danger"></span>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Sign Up</button>
            </div>
            </form>
    </div>
</div>

